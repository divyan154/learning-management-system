
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><%= quiz.title %></h3>
            
          </div>
          <% if (quiz.description) { %>
            <p class="mb-0 mt-2 text-muted"><%= quiz.description %></p>
          <% } %>
        </div>
   
        <div class="card-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Instructions:</strong> Answer all questions and click submit when done.
            Passing score: <%= quiz.passingScore %>%
          </div>

          <form method="POST" action="/quiz/<%=quiz._id%>/submit">
            <% quiz.questions.forEach((question, index) => { %>
              <div class="mb-4">
                <h5>Question <%= index + 1 %></h5>
                <p><%= question.text %></p>

                <div class="ms-3">
                  <% question.options.forEach((option, optionIndex) => { %>
                    <div class="form-check mb-2">
                      <input 
                        class="form-check-input" 
                        type="radio" 
                        name="answers[<%= index %>]" 
                        id="q<%= index %>_opt<%= optionIndex %>" 
                        value="<%= optionIndex %>" 
                        required
                      >
                      <label class="form-check-label" for="q<%= index %>_opt<%= optionIndex %>">
                        <%= option.text %>
                      </label>
                    </div>
                  <% }); %>
                </div>
              </div>
              <% if (index < quiz.questions.length - 1) { %><hr><% } %>
            <% }); %>

            <div class="d-flex gap-2 mt-4">
              <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-check me-2"></i>Submit Quiz
              </button>
              <a href="/courses/<%= quiz.course._id %>" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

    

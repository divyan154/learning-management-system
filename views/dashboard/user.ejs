<% const title = 'Dashboard' %>


<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Dashboard</h1>
        <span class="badge bg-primary">Student</span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">My Enrolled Courses</h5>
        </div>
        <div class="card-body">
          <% if (enrollments.length > 0) { %>
            <% enrollments.forEach(function(enrollment) { %>
              <div class="d-flex justify-content-between align-items-center border-bottom py-3">
                <div>
                  <h6 class="mb-1"><%= enrollment.course.title %></h6>
                  <small class="text-muted">Instructor: <%= enrollment.course.instructor %></small>
                </div>
                <div class="text-end">
                  <div class="progress mb-2" style="width: 150px;">
                    <div class="progress-bar" role="progressbar" style="width: <%= enrollment.progress %>%;">
                      <%= enrollment.progress %>%
                    </div>
                  </div>
                  <a href="/courses/<%= enrollment.course._id %>" class="btn btn-sm btn-primary">Continue</a>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No enrolled courses yet. <a href="/courses">Browse courses</a> to get started!</p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body text-center">
          <i class="fas fa-book text-primary mb-3" style="font-size: 2rem;"></i>
          <h5><%= enrollments.length %></h5>
          <p class="text-muted mb-0">Enrolled Courses</p>
        </div>
      </div>

      <div class="card">
        <div class="card-body text-center">
          <i class="fas fa-trophy text-warning mb-3" style="font-size: 2rem;"></i>
          <h5>
            <%= enrollments.filter(function(e) { return e.progress === 100 }).length %>
          </h5>
          <p class="text-muted mb-0">Completed Courses</p>
        </div>
      </div>
    </div>
  </div>
</div>

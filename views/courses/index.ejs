<% const title = 'Courses' %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h1 class="display-4 fw-bold">All Courses</h1>
      <p class="lead">Discover our comprehensive course catalog</p>
    </div>
  </div>

  <div class="row">
    <% if (courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="col-md-4 mb-4">
          <div class="card course-card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= course.description %></p>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <small class="text-muted">
                  <i class="fas fa-user me-1"></i><%= course.instructor %>
                </small>
                <span class="badge bg-primary fs-6">$<%= course.price %></span>
              </div>
              <div class="d-flex justify-content-between text-muted small">
                <span>
                  <i class="fas fa-play me-1"></i>
                  <%= course.lessons ? course.lessons.length : 0 %> lessons
                </span>
                <span>
                  <i class="fas fa-question-circle me-1"></i>
                  <%= course.quizzes ? course.quizzes.length : 0 %> quizzes
                </span>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <a href="/api/courses/<%= course._id %>" class="btn btn-primary w-100">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="text-center">
        <p class="text-muted">No courses available yet.</p>
      </div>
    <% } %>
  </div>
</div>

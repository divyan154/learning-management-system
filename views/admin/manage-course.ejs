<% const title = 'Manage Course' %>


<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage: <%= course.title %></h1>
        <div>
          <a href="/courses/<%= course._id %>/lessons/create" class="btn btn-primary me-2">
            <i class="fas fa-plus me-1"></i>Add Lesson
          </a>
          <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Lessons -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Lessons (<%= course.lessons ? course.lessons.length : 0 %>)</h5>
        </div>
        <div class="card-body">
          <% if (course.lessons && course.lessons.length > 0) { %>
            <div class="list-group">
              <% course.lessons.sort((a, b) => a.order - b.order).forEach(lesson => { %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1"><%= lesson.title %></h6>
                      <small class="text-muted">Order: <%= lesson.order %></small>
                    </div>
                    <a href="<%= lesson.videoUrl %>" target="_blank" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-external-link-alt"></i>
                    </a>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <p class="text-muted">No lessons added yet.</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Quizzes -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Quizzes (<%= course.quizzes ? course.quizzes.length : 0 %>)</h5>
        </div>
        <div class="card-body">
          <% if (course.quizzes && course.quizzes.length > 0) { %>
            <div class="list-group">
              <% course.quizzes.forEach(quiz => { %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <h6 class="mb-1"><%= quiz.title %></h6>
                      <small class="text-muted"><%= quiz.questions.length %> questions</small>
                    </div>
                    <span class="badge bg-primary"><%= quiz.passingScore %>%</span>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <p class="text-muted">No quizzes added yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

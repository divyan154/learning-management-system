<% const title = 'Add Lesson' %>


<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Add Lesson to: <%= course.title %></h3>
        </div>
        <div class="card-body">
          <form method="POST" action="/courses/<%= course._id %>/lessons/create">
            <div class="mb-3">
              <label for="title" class="form-label">Lesson Title</label>
              <input type="text" class="form-control" id="title" name="title" required>
            </div>

            <div class="mb-3">
              <label for="videoUrl" class="form-label">Video URL</label>
              <input type="url" class="form-control" id="videoUrl" name="videoUrl" required>
              <div class="form-text">Enter the URL of the video (YouTube, Vimeo, etc.)</div>
            </div>

            <div class="mb-3">
              <label for="order" class="form-label">Lesson Order</label>
              <input type="number" class="form-control" id="order" name="order" min="1" required>
              <div class="form-text">The order in which this lesson appears in the course</div>
            </div>

            <div class="mb-3">
              <label for="resourceLinks" class="form-label">Resource Links (Optional)</label>
              <textarea class="form-control" id="resourceLinks" name="resourceLinks" rows="3" placeholder='[{"title": "Resource 1", "url": "https://example.com"}]'></textarea>
              <div class="form-text">JSON format: [{"title": "Link Title", "url": "https://example.com"}]</div>
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Add Lesson</button>
              <a href="/courses/<%= course._id %>/manage" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

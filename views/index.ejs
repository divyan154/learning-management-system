<% const title = 'Home' %>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4">Learn Without Limits</h1>
        <p class="lead mb-4">
          Discover thousands of courses, build skills, and advance your career with our comprehensive learning management system.
        </p>
        <div class="d-flex gap-3">
          <a href="/api/courses" class="btn btn-light btn-lg">Browse Courses</a>
          <% if (!user) { %>
            <a href="/api/auth/register" class="btn btn-outline-light btn-lg">Get Started</a>
          <% } %>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <i class="fas fa-graduation-cap" style="font-size: 200px; opacity: 0.3;"></i>
      </div>
    </div>
  </div>
</section>

<!-- Featured Courses -->
<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h2 class="display-5 fw-bold">Featured Courses</h2>
        <p class="lead">Start your learning journey with our most popular courses</p>
      </div>
    </div>

    <div class="row">
      <% courses.forEach(course => { %>
        <div class="col-md-4 mb-4">
          <div class="card course-card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= course.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <i class="fas fa-user me-1"></i><%= course.instructor %>
                </small>
                <span class="badge bg-primary">$<%= course.price %></span>
              </div>
            </div>
            <div class="card-footer bg-transparent">
              <a href="/api/courses/<%= course._id %>" class="btn btn-primary w-100">View Course</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-center mt-4">
      <a href="/api/courses" class="btn btn-outline-primary btn-lg">View All Courses</a>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h2 class="display-5 fw-bold">Why Choose Our LMS?</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 text-center mb-4">
        <div class="mb-3">
          <i class="fas fa-play-circle text-primary" style="font-size: 3rem;"></i>
        </div>
        <h4>Video Lessons</h4>
        <p>High-quality video content from expert instructors</p>
      </div>

      <div class="col-md-4 text-center mb-4">
        <div class="mb-3">
          <i class="fas fa-question-circle text-primary" style="font-size: 3rem;"></i>
        </div>
        <h4>Interactive Quizzes</h4>
        <p>Test your knowledge with comprehensive quizzes</p>
      </div>

      <div class="col-md-4 text-center mb-4">
        <div class="mb-3">
          <i class="fas fa-chart-line text-primary" style="font-size: 3rem;"></i>
        </div>
        <h4>Progress Tracking</h4>
        <p>Monitor your learning progress and achievements</p>
      </div>
    </div>
  </div>
</section>
